
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "gallery": {
      "title": "Gallery",
      "description": "A gallery of artworks.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the gallery."
        },
        "slug": {
          "type": "string",
          "description": "The slug for the gallery URL."
        },
        "thumbnailUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the gallery's thumbnail image."
        }
      },
      "required": ["name", "slug"]
    },
    "artwork": {
      "title": "Artwork",
      "description": "A piece of artwork.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the artwork."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date the artwork was created."
        },
        "medium": {
          "type": "string",
          "description": "The medium used to create the artwork."
        },
        "description": {
          "type": "string",
          "description": "A description of the artwork."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the artwork image."
        },
        "thumbnailUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the artwork thumbnail."
        },
        "galleryId": {
          "type": "string",
          "description": "The ID of the gallery this artwork belongs to."
        }
      },
      "required": ["title", "imageUrl", "galleryId"]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/galleries/{galleryId}": {
      "schema": {
        "$ref": "#/entities/gallery"
      },
      "description": "Stores gallery information."
    },
    "/galleries/{galleryId}/artworks/{artworkId}": {
      "schema": {
        "$ref": "#/entities/artwork"
      },
      "description": "Stores artwork within a gallery."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profiles."
    }
  }
}
